<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="30dp"
              android:layout_height="match_parent">

    <Button
            android:text="Search Again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/searchBtn" style="?android:attr/buttonStyle"
            android:layout_marginBottom="20dp"
            />

    <ListView
            android:divider="@color/colorPrimary" android:dividerHeight="1px"
            android:layout_width="match_parent" android:id="@+id/list" android:layout_height="wrap_content"/>

</LinearLayout>