<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#fafafa" android:id="@+id/linearLayout">
    <Button
            android:id="@+id/searchBtn"
            android:layout_width="211dp"
            android:layout_height="79dp"
            android:textColor="#FFFFFF"
            android:text="Search"
            android:background="@drawable/ripple"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:src="@drawable/rlogo2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/ip"
            android:layout_width="211dp"
            android:layout_height="60dp"
            android:maxLines="1"
            android:lines="1"
            android:hint="Enter your IP address"
            android:inputType="text"

            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.467"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/img"/>
    <Button
            android:id="@+id/connBtn"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="CONNECT"
            android:background="@drawable/ripple"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/ip"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
    />
    <TextView
            android:text="OR"
            android:textAlignment="center"
            android:layout_width="211dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.51" android:id="@+id/textView2" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/connBtn"/>
    <TextView
            android:text="Copyright Â© 2019 Wei J. Zheng and Saee Avinash Gore. All rights reserved."
            android:layout_width="395dp"
            android:textAlignment="center"
            android:layout_height="25dp"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBtn" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>